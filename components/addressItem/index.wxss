.orderContentLeft {
  flex-grow: 1;
  padding: 37rpx 24rpx;
}

.orderContent {
  background: #fff;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #f6f6f6;
}

.addressNew {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addressNew view:last-child {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-left: 12rpx;
}

.orderContentRight .icon {
  width: 28rpx;
  height: 28rpx;
}

.typeClass {
  display: inline;
  margin-left: 17rpx;
}

.typeClass view {
  display: inline;
  line-height: 24rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  padding: 0rpx 10rpx;
  background: #fff;
}

.orderContentRight {
  padding-right: 28rpx;
}

.orderContentLeftTop {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 800;
  color: rgba(51, 51, 51, 1);
  align-items: center;
}

.mobile {
  margin-left: 15rpx;
}

.orderContentLeftBottom {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  margin-top: 17rpx;
  margin-left: -5rpx;
}

.icon {
  width: 46rpx;
  height: 46rpx;
}

.icon image {
  width: 100%;
  height: 100%;
}

.mrView {
  display: inline;
  padding: 0rpx 17rpx;
  background: rgba(204, 0, 0, 1);
  border-radius: 500rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
  margin-right: 15rpx;
}
.hoverClass{
  background: #fff;
}
