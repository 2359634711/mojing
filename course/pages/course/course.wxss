/* pages/course/course.wxss */
.bgf{
  background: #fff;
}
.header{
  padding:16rpx 0rpx;
  background: #fff;
}
.switch{
  width: 323rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #F5F5F5;  
  margin: 0rpx auto;
  position: relative;
  border:1px solid rgba(236, 236, 236, 1);
}
.switch .val{
  width: 50%;
  height: 68rpx;
  line-height: 68rpx;
  color: #999;
  text-align: center;
  display: inline-block; 
}
.switch .button{
  border-radius: 34rpx;
  width: 50%;
  height: 68rpx;
  line-height: 68rpx;
  color: #fff;
  position: absolute;
  text-align: center;
  left:0px;
  transition: transform 0.05s;
}
/* 学习 */
.video{
  width: 100%;
  display: block;
}
.label{
  display: flex;
  background: #fff;
  border-bottom: 1px solid #F5F5F5;
}
.label>view{
  flex-grow: 1;
  display: flex;
  justify-content: center;
}
.label>view text{
  padding: 34rpx 0rpx;
  border-bottom:2px solid #fff;
}
/* 视频列表 */
.videoList{
  border-bottom: 1px solid #f5f5f5;
  padding:45rpx 40rpx; 
  display: flex;
  background: #fff;
}
.videoList .cover{
  width:266rpx;
  height:151rpx;
  position: relative;
}
.videoList .cover .img{
  position: absolute;
  width: 100%;
  height: 100%;
}
.videoList .cover .icon{
  position: absolute;
  left: 50%;
  top:50%;
  transform:translate(-50%,-50%);
  width:68rpx;
  height:68rpx;
}
.videoList .info{
  flex-grow: 1;
  display: flex;
  flex-direction:column;
  justify-content:center;
  padding-left: 30rpx;
}
.videoList .info .name{
  font-size: 32rpx;
  margin-bottom: 12rpx;
}
.videoList .info .time,.videoList .info .number{
  font-size: 24rpx;
  color: #999;
}
.size32{
  font-size: 32rpx;
}
/* 评论列表 */
.discussList{
  border-bottom: 1px solid #f5f5f5;
  padding:42rpx 25rpx; 
  display: flex;
  background: #fff;
}
.discussList .photo{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: block;
  flex-shrink:0;
  margin-right: 12rpx;
}
.discussList .info{
  width: 100%;
}
.discussList .header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.discussList .header .user{
  display: flex;
  flex-grow: 1;
}
.discussList .header .whole{
  flex-grow: 1;
}
.discussList .header .time{
  font-size: 20rpx;
  color: #999;
}
.discussList .header .save{
  color: #D51C1C;
}
.pl77{
  padding-left: 77rpx;
}
.reply{
  color: #D51C1C;
}
.replyText{
  padding:25rpx 49rpx 25rpx 25rpx;
  background-color: #F5F5F5;
}
.replyText .name{
  color: #D51C1C;
}
.message{
  padding-bottom: 24rpx;
}
.mt{
  margin-top: 10rpx;
}

/* 悬浮按钮 */
.center{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction:column;
  width:100%;
  height:100%;
}
.center>text{
  font-size: 24rpx;
}

/* 考试 */
.examHeader{
  position: relative;
}
.examHeader .bgImg{
  width: 100%;
}
.examHeader .Arrow{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  bottom: 170rpx;
  left: 50%;
  margin-left: -17rpx;
}
.examHeader .stafPaper{
  position: absolute;
  top:44rpx;
  right: 28rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.examHeader .stafPaper image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.examHeader .start{
  width: 100%;
  font-size:44rpx;
  color: #fff;
  font-weight:600;
  position: absolute;
  bottom: 95rpx;
  text-align: center;
  background:linear-gradient(0deg,rgba(208,175,111,1) 0%, rgba(225,205,167,1) 100%);
-webkit-background-clip:text;
-webkit-text-fill-color:transparent;
}
.seeButton{
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 56rpx;
  height: 112rpx;
  width: 80%;
  color: #fff;
  margin: 50rpx auto;
  font-size: 32rpx;
}
.seeButton .icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 34rpx;
}

/* 漂浮窗 */
.floatButton{
  position: fixed;
  align-content: center;
  justify-items: center;
  right: 25rpx;
  bottom: 180rpx;
  border-radius: 50%;
  width: 96rpx;
  height: 96rpx;
  color: #fff;
}
