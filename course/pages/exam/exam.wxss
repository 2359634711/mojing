/* pages/exam/exam.wxss */

.header {
  background-size: 100% 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  position: relative;
}

.header image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.header .time {
  margin-top: 24rpx;
  color: #fff;
}

.header .title {
  font-size: 36rpx;
}

.topicTitle {
  width: 165rpx;
  height: 63rpx;
  background-size: 100% 100%;
  color: #fff;
  line-height: 63rpx;
  font-size: 32rpx;
  padding-left: 27rpx;
  margin-top: 26rpx;
  position: relative;
}

.topicTitle image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.ml28 {
  margin-left: 28rpx;
}

.giltFont {
  background: linear-gradient(0deg, rgba(208, 175, 111, 1) 0%, rgba(225, 205, 167, 1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.sub {
  margin: 40rpx auto 10rpx auto;
  width: calc(100% - 48rpx);
  height: 98rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 98rpx;
  text-align: center;
  border-radius: 100rpx;
}

.examineeText {
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: calc(100% - 80rpx);
  min-height: 80rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 3px;
  color: #999;
  padding: 10rpx;
}

.totalScore {
  margin-left: 28rpx;
  font-size: 32rpx;
}

.evaluateSee {
  margin-top: 25rpx;
  width: 100%;
  height: 178rpx;
  background: rgba(221, 183, 123, 0.2);
  text-align: center;
  /* padding:45rpx; */
}

.evaluateSee .title {
  font-size: 32rpx;
  /* width: calc(100% - 90rpx); */
  color: #fff;
}

/* 进度条 */

.scheduleNum {
  text-align: right;
  padding: 25rpx;
  font-size: 32rpx;
}

.scheduleStrip {
  width: 100%;
  height: 6rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 3rpx;
}

.pointer {
  height: 6rpx;
  background: linear-gradient(-90deg, rgba(207, 174, 108, 1), rgba(225, 206, 168, 1));
  border-radius: 3rpx;
}

.golden {
  color: #deb980;
}

page {
  background: #fff;
}

.header {
  color: #fff !important;
}
