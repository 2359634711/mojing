.itemBox {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 5rpx 25rpx 34rpx 25rpx;
}

.itemLeft {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemLeft .leftText {
  margin: 20rpx 0 20rpx 20rpx;
}

.itemLeft .leftText view:first-child {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  /* color: rgba(51, 51, 51, 1); */
}

.itemLeft .leftText view:last-child {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 800;
  /* color: rgba(153, 153, 153, 1); */
  margin-top: 8rpx;
}

.itemRight view:first-child {
  font-size: 28rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(130, 76, 31, 1);
}

.itemRight {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 800;
  color: #c00;
  margin-top: 8rpx;
}

.listBox {
  margin-top: 20rpx;
}

.bottonItemTitle {
  white-space: nowrap;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.bottonItemValue {
  width: 250rpx;
  overflow: hidden;
  white-space: nowrap;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #999;
  margin-left: 14rpx;
}

.itemTop {
  margin-top: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.itemBottom {
  border-top: 1rpx solid #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.itemBottomItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bottomItemBox {
  display: flex;
  flex-direction: row;
  margin-top: 27rpx;
}

.bottomItemBox:last-child {
  width: 320rpx;
}

.redBlod {
  color: #c00;
  font-weight: 800;
}
