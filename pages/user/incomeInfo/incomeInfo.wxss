/* pages/money/money.wxss */

.backBox {
  position: relative;
  width: 100%;
  height: 265rpx;
}

.backBox image {
  z-index: -1;
  position: absolute;
  height: 100%;
  width: 100%;
}

.textBox {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.moneyBox {
  display: flex;
  flex-direction: row;
  color: #fff;
  align-items: baseline;
}

.backBox {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.moneyBox view:first-child {
  font-size: 24rpx;
}

.moneyBox view:last-child {
  margin-left: 10rpx;
  font-size: 46rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.textBox .info {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  opacity: 0.31;
  margin-top: 20rpx;
}

.mainBox {
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  overflow: hidden;
  margin-top: -10rpx;
}

.navBox {
  width: 100%;
  height: 107rpx;
  margin-bottom: -90rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.navItem {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.navActive {
  font-weight: 800;
  color: rgba(130, 76, 31, 1);
}

